{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PlatformIO: Upload (Yardforce 500 (STM32F103 VCT6))",
			"type": "shell",
			"command": "pio",
			"args": [
				"run",
				"-t",
				"upload"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$platformio"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		}
	]
}
